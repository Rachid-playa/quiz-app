<%- include('partials/header') %>
    <%- include('partials/nav') %>

    <main id="edit-profile" class="container">
        <form action="/edit-profile/<%= profile.s_id %>" method="post" enctype="multipart/form-data">
            <h1>Customize</h1>
            
            <div class="form-input">
                <label for="">Name</label>
                <input type="text" name="name" value="<%= profile.name %>" id="">
            </div>

            <div class="form-input">
                <label for="">Email</label>
                <input type="email" name="email" value=" <%= profile.email %>" id="">
            </div>

            <div class="form-input">
                <label for="">Contacts</label>
                <input type="text" name="contacts"  id="" minlength="10" maxlength="10">
            </div>

            <div class="form-input">
                <label for="">Gender</label>
                <select name="gender" id="">
                    <option value="">Select gender</option>
                    <option value="male">Male</option>
                    <option value="female">female</option>
                </select>
            </div>

            <div class="form-input">
                <label for="">Date Of Birth</label>
                <input type="date" name="dob" id="">
            </div>

            <div class="form-input">
                <label for="">Profile Picture</label>
                <input type="file" name="picture"  id="">
            </div>
            
            <input type="submit" value="Update Profile">

        </form>
    </main>


<%- include('partials/footer') %>